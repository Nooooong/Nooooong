<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "이메일 인증 완료" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "닉네임과 비밀번호를 설정해주세요." />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "이메일" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "nongnong@test.com" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "닉네임" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint = "닉네임" />
    <Button
        android:id="@+id/login_signup_check01"
        android:text=" 중복확인 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "비밀번호" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint = "비밀번호" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "비밀번호 재입력" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint = "비밀번호 재입력" />


    <Button
        android:id="@+id/login_signup03"
        android:text=" 가입하기 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>